{
  "name": "helios",
  "displayName": "Helios",
  "publisher": "helios-lang",
  "description": "Helios language support for Visual Studio Code",
  "license": "MIT",
  "version": "0.2.0",
  "engines": {
    "vscode": "^1.45.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/helios/vscode-helios.git"
  },
  "categories": [
    "Programming Languages",
    "Linters",
    "Snippets"
  ],
  "activationEvents": [
    "onLanguage:helios"
  ],
  "main": "./out/extension",
  "contributes": {
    "languages": [
      {
        "id": "helios",
        "aliases": [
          "Helios",
          "helios"
        ],
        "extensions": [
          ".he",
          ".hel",
          ".helios"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "helios",
        "scopeName": "source.helios",
        "path": "./syntaxes/koi.tmLanguage.json"
      }
    ],
    "configuration": [
      {
        "title": "helios",
        "properties": {
          "helios.path": {
            "description": "Path to the Helios compiler executable",
            "type": "string",
            "default": "$HELIOS"
          },
          "helios.trace.server": {
            "description": "Trace communication between VSCode and HLS",
            "scope": "window",
            "type": "string",
            "enum": [
              "off",
              "messages",
              "verbose"
            ],
            "default": "off"
          }
        }
      }
    ],
    "snippets": [
      {
        "language": "helios",
        "path": "./snippets/helios.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "yarn run build",
    "build": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run build && yarn run lint"
  },
  "dependencies": {
    "vscode-languageclient": "^6.1.3"
  },
  "devDependencies": {
    "@types/glob": "^7.1.2",
    "@types/node": "^14.0.11",
    "@types/vscode": "^1.45.1",
    "prettier": "2.2.1",
    "typescript": "^3.9.5",
    "vscode-test": "^1.4.0"
  }
}
