{
  "name": "koi",
  "displayName": "Koi",
  "publisher": "koi-lang",
  "description": "Koi language support for Visual Studio Code",
  "license": "MIT",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.45.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tahscenery/vscode-koi.git"
  },
  "categories": [
    "Programming Languages",
    "Linters",
    "Snippets"
  ],
  "activationEvents": [
    "onLanguage:koi"
  ],
  "main": "./out/extension",
  "contributes": {
    "languages": [
      {
        "id": "koi",
        "aliases": [
          "Koi",
          "koi"
        ],
        "extensions": [
          ".koi"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "koi",
        "scopeName": "source.koi",
        "path": "./syntaxes/koi.old.tmLanguage.json"
      }
    ],
    "configuration": [
      {
        "title": "koi",
        "properties": {
          "koi.path": {
            "description": "The path to the Koi executable",
            "type": "string",
            "default": "$KOI_PATH"
          },
          "koi.trace.server": {
            "description": "Trace the communication between VSCode and KoiLS",
            "scope": "window",
            "type": "string",
            "enum": ["off", "messages", "verbose"],
            "default": "off"
          }
        }
      }
    ],
    "snippets": [
      {
        "language": "koi",
        "path": "./snippets/koi.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint"
  },
  "dependencies": {
    "vscode-languageclient": "^6.1.3"
  },
  "devDependencies": {
    "@types/glob": "^7.1.2",
    "@types/node": "^14.0.11",
    "@types/vscode": "^1.45.1",
    "tslint": "^6.1.2",
    "typescript": "^3.9.5",
    "vscode-test": "^1.4.0"
  }
}
